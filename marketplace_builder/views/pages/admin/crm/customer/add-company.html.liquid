{%- assign name = 'Add Company' -%}
{%- content_for 'pagetitle' -%}{{ name }}{%- endcontent_for -%}

<div class="grid-container-full">
    <div class="grid-x grid-padding-x">
        <div class="large-12 cell">
        <div class="add-container">
            <ins-card steady>
                <h3>Company Logo</h3>
                <ins-image-picker type="logo" button-color="grey"></ins-image-picker>
                <h3>Cmpany Details</h3>
                <div class="grid-x grid-padding-x margin-bottom-20">
                <div class="large-4 cell">
                    <ins-input label="Company Name" placeholder="Company Name"></ins-input>
                    <label for="companyType">Company Type</label>
                    <select name="companyType" id="companyType">
                    <option value="+61">-Select-</option>
                    <option value="Test 1">Test 1</option>
                    <option value="Test 2">Test 2</option>
                    <option value="Test 3">Test 3</option>
                    </select>
                </div>
                <div class="large-4 cell">
                    <label for="assignedTo">Assigned To</label>
                    <select name="assignedTo" id="assignedTo">
                        <option value="Test 1">-Select-</option>
                        <option value="Test 1">Test 1</option>
                        <option value="Test 2">Test 2</option>
                        <option value="Test 3">Test 3</option>
                    </select>
                    <label for="industryType">Industry Type</label>
                    <select name="industryType" id="industryType">
                        <option value="Test 1">-Select-</option>
                        <option value="Test 1">Test 1</option>
                        <option value="Test 2">Test 2</option>
                        <option value="Test 3">Test 3</option>
                    </select>
                </div>
                <div class="large-4 cell">
                    <ins-input label="Website" placeholder="Website"></ins-input>
                    <label for="phone">Phone</label>
                    <div class="clearfix">
                    <div class="la-20">
                        <select name="phone" id="phone">
                        <option value="61">+61</option>
                        <option value="62">+62</option>
                        <option value="63">+63</option>
                        </select>
                    </div>
                    <div class="la-30">
                        <ins-input placeholder="Area Code"></ins-input>
                    </div>
                    <div class="la-50">
                        <ins-input placeholder="Phone Number"></ins-input>
                    </div>
                    </div>
                </div>
                </div>
                <h3>Address</h3>
                <div class="grid-x grid-padding-x margin-bottom-20">
                    <div class="large-4 cell">
                    <ins-input label="Search Address" placeholder="Search Address"></ins-input>
                    <div class="clearfix">
                        <div class="la-30">
                        <ins-input label="Address" placeholder="Street Number"></ins-input>
                        </div>
                        <div class="la-70">
                        <ins-input placeholder="Address" class="margin-top-23"></ins-input>
                        </div>
                    </div>
                    
                    </div>
                    <div class="large-4 cell">
                        <ins-input label="State" placeholder="State"></ins-input>
                        <ins-input label="City" placeholder="City"></ins-input>
                    </div>
                    <div class="large-4 cell">
                        <ins-input label="Post Code" placeholder="Post Code"></ins-input>
                        <ins-input label="Country" placeholder="Country"></ins-input>
                    </div>
                </div>
                <h3>Additional Info</h3>
                <div class="grid-x grid-padding-x margin-bottom-20">
                    <div class="large-4 cell">
                    <ins-input label="Facebook" placeholder="Facebook Profile Link"></ins-input>
                    <ins-input label="Twitter" placeholder="Twitter Profile Link"></ins-input>
                    </div>
                    <div class="large-4 cell">
                        <ins-input label="YouTube" placeholder="YouTube Profile Link"></ins-input>
                    <ins-input label="LinkedIn" placeholder="LinkedIn Profile Link"></ins-input>
                    </div>
                    <div class="large-4 cell">
                        <ins-input label="Google +" placeholder="Google + Profile Link"></ins-input>
                    <ins-input label="Instagram" placeholder="Instagram Profile Link"></ins-input>
                    </div>
                </div>
                <h3>Custom Fields</h3>
                <div class="grid-x grid-padding-x">
                    <div class="large-4 cell">
                    <ins-input label="Hourly Rate - Dev and Design" placeholder="Hourly Rate - Dev and Design"></ins-input>
                    </div>
                    <div class="large-4 cell">
                        <ins-input label="Marketing Lead" placeholder="Marketing Lead"></ins-input>
                    </div>
                </div>
            </ins-card>
            <div class="margin-top-30 float-right">
                <ins-button label="CANCEL" outlined class="margin-right-10"></ins-button>
                <ins-button label="ADD COMPANY" solid></ins-button>
            </div>
        </div>
        </div>
    </div>
</div>