---
slug: admin/sessions/my-profile
format: html
layout_name: admin/empty_layout
---
{%- assign name = 'My Profile' -%}
{%- content_for 'pagetitle' -%}{{ name }}{%- endcontent_for -%}

{% query_graph 'current_user', result_name: 'g' %}

<div class="grid-container-full">
  <div class="grid-x">
    <div class="large-6 cell">
      <div class="form-wrap">
        {% if flash.alert != blank %}
          <p>{{ flash.alert }}</p>
        {% endif %}
        {% render_form 'admin_update_profile' resource_id: @g.current_user.id %}
      </div>
    </div>
  </div>
</div>